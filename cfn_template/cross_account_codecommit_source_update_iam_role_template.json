{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "ApplicationName": {
      "Default": "ServerlessApp",
      "Type": "String",
      "Description": "Name of your application"
    },
    "RepositoryName": {
      "Type": "String",
      "Description": "Name of your CodeCommit repository"
    },
    "PipelineAccountId": {
      "Type": "String",
      "Description": "AWS Account ID of the pipeline (CodePipeline) side"
    },
    "ArtifactBucketName": {
      "Type": "String",
      "Description": "Name of the artifact S3 bucket"
    },
    "KmsKeyArn": {
      "Type": "String",
      "Description": "ARN of the KMS key for artifact encryption"
    }
  },
  "Resources": {
    "CrossAccountRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Sub": "${ApplicationName}CrossAccountRole"
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Sub": "arn:aws:iam::${PipelineAccountId}:root"
                }
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "CrossAccountPipelinePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "UploadArtifactPolicy",
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject",
                    "s3:PutObjectAcl"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:s3:::${ArtifactBucketName}/*"
                    }
                  ]
                },
                {
                  "Sid": "KMSAccessPolicy",
                  "Effect": "Allow",
                  "Action": [
                    "kms:DescribeKey",
                    "kms:GenerateDataKey*",
                    "kms:Encrypt",
                    "kms:ReEncrypt*",
                    "kms:Decrypt"
                  ],
                  "Resource": [
                    { "Ref": "KmsKeyArn" }
                  ]
                },
                {
                  "Sid": "CodeCommitAccessPolicy",
                  "Effect": "Allow",
                  "Action": [
                    "codecommit:GetBranch",
                    "codecommit:GetCommit",
                    "codecommit:GetUploadArchiveStatus",
                    "codecommit:UploadArchive",
                    "codecommit:CancelUploadArchive"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:codecommit:${AWS::Region}:${AWS::AccountId}:${RepositoryName}"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  }
}